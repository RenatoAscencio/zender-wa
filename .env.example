# ==============================================================================
# Zender WhatsApp Server - Optimized Configuration
# ==============================================================================

# --- Service Configuration ---

# The port the WhatsApp service will listen on
# Default: 443 (HTTPS)
# Range: 1-65535
PORT=443

# Your Zender Purchase Code (required)
# Obtain from: https://codecanyon.net/item/zender-android-mobile-devices-as-sms-gateway-saas-platform/26594230
PCODE=your-purchase-code-here

# Your Zender API Key (required)
# This should be a secure, unique key for your installation
KEY=your-api-key-here

# --- Advanced Configuration ---

# Custom download URL for binary updates (optional)
# Leave empty to use default
DOWNLOAD_URL_OVERRIDE=

# Binary checksum for security verification (optional)
# SHA256 hash of the expected binary
DOWNLOAD_SHA256=

# --- Resource Limits ---

# Maximum memory usage in MB (default: 1024)
MAX_MEMORY_MB=1024

# Maximum CPU usage percentage (default: 80)
MAX_CPU_PERCENT=80

# --- Monitoring Configuration ---

# Monitoring interval in seconds (default: 30)
MONITORING_INTERVAL=30

# Log rotation size in MB (default: 50)
LOG_ROTATION_SIZE=50

# Alert thresholds
ERROR_THRESHOLD=10
WARNING_THRESHOLD=20

# --- Network Configuration ---

# Connection timeout for network operations (seconds)
CONNECTION_TIMEOUT=30

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT=10

# --- Security Settings ---

# Enable strict validation (true/false)
STRICT_VALIDATION=true

# Enable automatic recovery (true/false)
AUTO_RECOVERY=true

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# --- Backup Configuration ---

# Enable automatic backups (true/false)
AUTO_BACKUP=true

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup directory
BACKUP_DIR=/data/whatsapp-server/backups

# --- Integration Settings ---

# Webhook URL for alerts (optional)
WEBHOOK_URL=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK=

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK=

# --- Performance Tuning ---

# Restart threshold (number of failures before giving up)
RESTART_THRESHOLD=5

# Grace period for shutdown (seconds)
SHUTDOWN_GRACE_PERIOD=30

# Startup timeout (seconds)
STARTUP_TIMEOUT=60

# --- Development/Debug Options ---

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Enable performance metrics (true/false)
PERFORMANCE_METRICS=true

# Enable health check endpoint (true/false)
HEALTH_CHECK_ENABLED=true